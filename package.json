    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.29.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
